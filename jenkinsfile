pipeline{
    agent any
    stages{
        stage("terraform plan"){
            steps{
                sh " terraform init "
                sh "terraform validate"
                sh "terraform plan" 

            }
        }

        stage("ansiible"){
            steps{
                sh "cd terraform"
                sh "ansible-playbook  -i /home/ubuntu/terraform/hosts ansible.yaml"
            }

        }
    }
}